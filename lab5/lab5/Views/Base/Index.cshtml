    <section id="contact">
        <p><h3>Контакты</h3></p>
        <p class="contact">
            <img src="~/Content/phone.png" height="50" alt="phone"> 8(495)867-23-01
            <img src="~/Content/mail.png" height="50" alt="email"> phphoto@mail.ru
